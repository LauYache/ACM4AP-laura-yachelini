<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/azul_marino"
    android:id="@+id/main"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pregunta3Activity">

    <TextView
        android:id="@+id/txtSaludo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pregunta 3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/celeste"
        android:buttonTint="@color/celeste"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtPregunta3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¿Qué componente se usa para mostrar una lista de elementos en Android?"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:buttonTint="@color/celeste"
        app:layout_constraintTop_toBottomOf="@id/txtSaludo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/grupoOpciones3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtPregunta3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/op10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/celeste"
            android:buttonTint="@color/celeste"
            android:text="RecyclerView" />

        <RadioButton
            android:id="@+id/op11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/celeste"
            android:buttonTint="@color/celeste"
            android:text="Toast" />

        <RadioButton
            android:id="@+id/op12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/celeste"
            android:buttonTint="@color/celeste"
            android:text="Snackbar" />
    </RadioGroup>


    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/grupoOpciones3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnResponder3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:backgroundTint="@color/celeste"
            android:textColor="@android:color/white" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>